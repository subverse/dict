<div id="form">
<%= error_messages_for :grammar %>

<% form_for @grammar, :url => url do |f| %>
  <p>
    <b>grammar</b><br />
    <%= f.text_field :grm, :style => "background-color: #CCCCCC", :class => "text_field" %>
  </p>
	
  <p>
    <b>Note</b><br />
    <%= f.text_area :note, :rows => 7, :class => "text_field" %>
  </p>
  
  <div id="submit_btn">
    <%= my_submit_tag submit_text %>
  </div>
<% end %>
</div>