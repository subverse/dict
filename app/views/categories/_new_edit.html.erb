<div id="form">
<%= error_messages_for :category %>

<% form_for @category, :url => url do |f| %>
  <p>
    <b>category</b><br />
    <%= f.text_field :cat, :class => "text_field" %>
  </p>
	
  <p>
    <b>Note</b><br />
    <%= f.text_area :note, :rows => 7, :class => "text_field" %>
  </p>
  
  <div id="submit_btn">
    <%= my_submit_tag submit_text %>
  </div>
<% end %>
</div>